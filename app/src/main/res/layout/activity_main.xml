<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/MainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:fontFamily="@font/ys_display_medium"
        android:paddingBottom="10dp"
        android:text="@string/main__title"
        android:textColor="@color/yp_white"
        android:textSize="@dimen/primary_text_size" />

    <Button
        android:id="@+id/btnSearch"
        style="@style/MainMenuButton"
        android:text="@string/main__search"
        app:icon="@drawable/ic_search_24" />

    <Button
        android:id="@+id/btnLibrary"
        style="@style/MainMenuButton"
        android:text="@string/main__media_library"
        app:icon="@drawable/ic_library_24" />

    <Button
        android:id="@+id/btnSettings"
        style="@style/MainMenuButton"
        android:text="@string/main__settings"
        app:icon="@drawable/ic_settings_24" />

</LinearLayout>